<Project>
    <PropertyGroup>
        <_OutputPath>$(MSBuildProjectDirectory)\bin\$(Configuration)\$(TargetFramework)</_OutputPath>        
        <_BuildAssemblyFile>$(_OutputPath)\$(AssemblyName).dll</_BuildAssemblyFile>
    </PropertyGroup>

    <UsingTask 
        TaskName="TailwindDotnet.Hosting.Build.Tasks.SetupExecutableTask" 
        AssemblyFile="$(_BuildAssemblyFile)"
    />
</Project>